<Window x:Class="Knowtes.Frontend.Desktop.MainWindow"
        xmlns:p="clr-namespace:Knowtes.Frontend.Desktop.Properties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knowtes.Frontend.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1400">
    <Grid>
        <RadioButton x:Name="Light" Content="Light Appearance" HorizontalAlignment="Left" Margin="450,308,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="Dark" Content="Dark Appearance" HorizontalAlignment="Left" Margin="450,346,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Apply" Content="Apply" Width="100" Height="50" Click="Apply_Click"/>
    </Grid>
</Window>
